{
  "extends": "<%= rootTsConfigPath %>",
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "<%= offsetFromRoot %>dist/out-tsc",
    "allowJs": true,
    "types": [
      "nightwatch",
      "node"
    ],
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "nightwatch.conf.js"
  ]
}
